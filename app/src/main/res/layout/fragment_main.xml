<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comkakashipham05.httpsfacebook.repeattext.Fragment.MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/icon" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:hint="Nhập đoạn cần spam..."
                android:textColorHint="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/icon" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:hint="Số lần lặp ( Max = 9999)"
                android:inputType="number"
                android:maxLength="4"
                android:textColorHint="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:text="Mỗi đoạn trên một dòng ?"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/radiobt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"
            android:checked="false"
            android:text="Đánh số trước mỗi đoạn"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon1" />

            <EditText
                android:id="@+id/ed3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="8dp"
                android:hint=" Bắt đầu từ số ..."
                android:inputType="number"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="-2dp"
                android:text="Tăng dần"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radiobt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-2dip"
                android:text="Giảm dần"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/icon2" />

            <EditText
                android:id="@+id/ed4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:hint="Khoảng cách giữa 2 số"
                android:inputType="number"
                android:textColorHint="@color/colorPrimary"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="✔ Thực Hiện"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btclear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="✘ Clear all"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edout"
                android:layout_width="250dp"
                android:layout_height="69dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-5dp"
                android:gravity="left"
                android:hint="Trống"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btcopy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="COPY"
                android:textStyle="normal" />
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/av_banner"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-7492240680771442/9597016018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</FrameLayout>
